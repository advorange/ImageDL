<Window x:Class="ImageDL.UI.ImageDLWindow"
        x:Name="ImageDLWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageDL.UI"
        mc:Ignorable="d"
        Title="Image DL"
        FontFamily="Courier New"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid x:Name="Layout">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Grid.ColumnSpan="1"
                BorderBrush="Black"
                BorderThickness="1"
                Background="LightSlateGray">
            <Grid x:Name="SiteSelector">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="15*" />
                </Grid.RowDefinitions>

                <Button Grid.Row="0">
                    <Viewbox>
                        <TextBlock>Reddit</TextBlock>
                    </Viewbox>
                </Button>
                <Button Grid.Row="1">
                    <Viewbox>
                        <TextBlock>Placeholder</TextBlock>
                    </Viewbox>
                </Button>
                <Button Grid.Row="2">
                    <Viewbox>
                        <TextBlock>Placeholder 2</TextBlock>
                    </Viewbox>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Column="1"
                Grid.ColumnSpan="1"
                BorderBrush="Black"
                BorderThickness="1"
                Background="LightGray">
            <Grid x:Name="ArgumentDisplayer"
                  Grid.Column="1"
                  Grid.ColumnSpan="1">

            </Grid>
        </Border>

        <Border Grid.Column="2"
                Grid.ColumnSpan="1"
                BorderBrush="Black"
                BorderThickness="1"
                Background="White">
            <Grid x:Name="OutputGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock x:Name="Output"
                           TextWrapping="Wrap">
                        Text
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
